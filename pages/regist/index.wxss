/**index.wxss**/

.container {
  opacity: 0.75;
  background: -webkit-linear-gradient(top, #330033 0%,#CCCCCC 100%);
  background: -o-linear-gradient(top, #330033 0%,#CCCCCC 100%);
  background: -ms-linear-gradient(top, #330033 0%,#CCCCCC 100%);
  background: linear-gradient(to bottom, #330033 0%,#99CCFF 100%);
  font-family: 'track'!important;
}

.bgImg {
  z-index: -1;
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
}

.logo {
  margin-top: 100rpx ;
  width: 300rpx;
  height: 300rpx;
}

.signTitle {
  color: #fff;
  display: flex;
  margin: 50rpx 0 30rpx 0;
}

.whiteLine { 
  height: 5rpx;
  background-color: #fff;
  width: 60%;
  border-radius: 20rpx;
}

.input {
  color: #fff;
  width: 70%;
  height: 100rpx;
  margin-top: 50rpx;
  
}
.input input{
  border: 3rpx #fff solid;
  border-radius: 10rpx;
  
  padding: 15rpx 15rpx; 
}
.ph {
  color: #eee;
}

.numWaring {
  position: fixed;
  right: 50rpx;
  top: 585rpx;
}

.psdWaring {
  position: fixed;
  right: 50rpx;
  top: 715rpx;
}

.num-true {
  display: inherit;
}
.num-false {
  display: none;
}
.psd-true {
  display: inherit;
}
.psd-false {
  display: none;
}

.loginBtn {
  width: 68%;
  height: 90rpx;
  margin-top: 50rpx;
  line-height: 90rpx ;
  border: 5rpx #fff solid!important;
  color: #fff!important;
}

.btnHover {
  /* opacity: 0.5; */
  background-color: #eee;
}

.newAlert {
  padding: 15rpx 30rpx;
  display: block;
  text-align: center;
}

.info {
  color: #fff;
  font-size: 25rpx;
  margin-top: 50rpx;
  text-decoration: underline;
}

.footer {
  display: flex;
  position: fixed;
  color: #fff!important;
  bottom: 10rpx;
  font-size: 22rpx;
}